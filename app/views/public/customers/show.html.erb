<h1>マイページ</h1>


<table class = "table table-striped">
  <tbody>
    <% if @customer.present? %>
      <tr>
        <th>姓</th>
        <td><%= customer.last_name %></td>
      </tr>
      <tr>
        <th>名</th>
        <td><%= customer.first_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to edit_customer_path(@customer), class: "btn btn-light btn-outline-dark" do %>
  <i class="fas fa-user-cog"></i>
<% end %>